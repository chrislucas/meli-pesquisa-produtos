<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/yellow_FFFFEA33">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <stroke
                        android:width="1sp"
                        android:color="@color/yellow_FFFFEA33" />
                    <corners android:radius="5sp" />
                    <padding
                        android:bottom="5sp"
                        android:left="5sp"
                        android:right="5sp"
                        android:top="5sp" />
                </shape>
            </item>
            <item>
                <bitmap
                    android:gravity="center|right"
                    android:src="@drawable/sort_down_black_24" />
            </item>
        </layer-list>
    </item>
</ripple>